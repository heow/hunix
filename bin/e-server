#!/bin/bash
export xt="-fn 6x10"
if [ -z $1 ]; then
   if [ "tako" == "`hostname`" ]; then
       arg=~/prj-work/doc-wiki/WikiIndex.muse
   else
       arg=~/prj-personal/doc-wiki/WikiIndex.muse
   fi
else
   arg=$1
fi
if [ -n "$DISPLAY" ]; then
    emacs $xt -title "$USER@$HOSTNAME $arg" "$arg" &
else
    case "$TERM" in
        "vt100" ) 		 emacs $xt -title "$USER@$HOSTNAME $arg" $arg & ;;
        "rxvt" ) 		 emacs $xt -title "$USER@$HOSTNAME $arg" $arg & ;;
        "xterm" ) 		 emacs $xt -title "$USER@$HOSTNAME $arg" $arg & ;;
        "xterm-debian" )         emacs $xt -title "$USER@$HOSTNAME $arg" $arg & ;;
        "eterm" ) 	         emacs $xt -title "$USER@$HOSTNAME $arg" $arg & ;;
        "dumb" ) 		 emacs -nw $arg ;;
        "linux" ) 		 emacs -nw $arg ;;
        "" ) 	     	         emacs -nw $arg ;;
        * ) 			 emacs -nw $arg ;;
    esac
fi
